@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item me-2">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item me-2">

            <a class="nav-link btn btn-primary text-white" asp-controller="MyReservations" ><i class="fa-solid fa-calendar-days me-1"></i>My Reservations</a>

        </li>
        <li class="nav-item ms-2">

            <form class="form-inline ms-1" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link btn-danger text-white"><i class="fa-solid fa-right-to-bracket me-1"></i> Logout</button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-info text-white" asp-area="Identity" asp-page="/Account/Register"><i class="fa-regular fa-id-card me-1"></i>Register</a>
        </li>
        <li class="nav-item ms-2">
            <a class="nav-link btn btn-success text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-user me-1"></i>Login</a>
        </li>
    }
</ul>
